<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WSControl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/main_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <io.github.controlwear.virtual.joystick.android.JoystickView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/joystickView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:JV_buttonColor="#10100F"
                custom:JV_buttonSizeRatio="15%"
                custom:JV_borderColor="#3C4342"
                custom:JV_backgroundColor="#00BCD4"
                custom:JV_borderWidth="4dp"
                custom:JV_fixedCenter="false"
                />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_angle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="angle (en Â°) : "
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/txt_angle_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textSize="20dp"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/ll_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="decision : "
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/txt_decision_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="5px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_marginRight="4px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stop"
                        android:background="#72F44336"
                        />
                    <Button
                        android:id="@+id/btn_start"
                        android:layout_marginLeft="4px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:background="#6E4CAF50"
                        />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/rs_vitess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SliderStyle"
                        android:valueFrom="0.0"
                        android:stepSize="10.0"
                        android:valueTo="100.0"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>